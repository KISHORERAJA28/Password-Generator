import random
import string
def create_password(length=15):
    L = string.ascii_letters      
    N = string.digits
    S = string.punctuation
    all_characters = L+N+S
    password = [random.choice(L),random.choice(N),random.choice(S)]
    remaining_characters= length - 3
    password += random.choices(all_characters, k=remaining_characters)
    random.shuffle(password)
    final_password = ''.join(password)
    return final_password
print(" Here's your strong, randomly generated password:")
print(create_password(16))
